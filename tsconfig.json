{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules/**/*", "dist", "test"],
  "include": [
    "index.ts",
    "tokamak.tokenlist.json",
    "tokamak.contractlist.json",
    "package.json",
    "bin/**/*",
    "contracts/abis.ts",
    "contracts/src/validate.ts",
    "contracts/src/generate.ts",
    "packages",
    "packages/**/**/*.json",
    "tokens/**/*"
  ]
}
